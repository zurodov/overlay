# Calculate exec=/bin/bash cl_merge_pkg!=

echo "Fix tftp-hpa setup"

sed -i '/server_args/s/tftpboot/var\/calculate\/tftpboot/' /etc/xinetd.d/tftp
sed -i '/tftpboot/s/tftpboot/var\/calculate\/tftpboot/' /etc/conf.d/in.tftpd
sed -i '/tftpboot/s/^#//' /etc/conf.d/in.tftpd

if [[ ! -d "/var/calculate/tftpboot" ]];  then
   mkdir /var/calculate/tftpboot
fi

exit 0
